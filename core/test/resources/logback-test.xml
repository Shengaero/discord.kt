<configuration>
  <conversionRule conversionWord="hl" converterClass="me.kgustave.dkt.core.test.logging.Highlighter"/>
  <appender name="Simple" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <!-- Pattern -->
      <pattern>
        %nopex[%d{HH:mm:ss}] [%hl(%level)] [%logger{0}]: %hl(%msg%n%ex)
      </pattern>
    </encoder>
  </appender>
  <root level="DEBUG">
    <appender-ref ref="Simple"/>
  </root>
</configuration>